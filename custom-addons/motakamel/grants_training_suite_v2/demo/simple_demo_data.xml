        <!-- Simple Demo Training Programs (no external dependencies) -->
        <record id="demo_training_program_english" model="gr.training.program">
            <field name="name">English Communication Program</field>
            <field name="description">Basic English communication skills program</field>
            <field name="duration_weeks">4</field>
            <field name="status">active</field>
            <field name="eligibility_criteria">Basic English knowledge required</field>
        </record>
        
        <record id="demo_training_program_digital" model="gr.training.program">
            <field name="name">Digital Skills Program</field>
