<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Course Integration Form View -->
    <record id="view_gr_course_integration_form" model="ir.ui.view">
        <field name="name">gr.course.integration.form</field>
        <field name="model">gr.course.integration</field>
        <field name="arch" type="xml">
            <form string="Course Integration">
                <header>
                    <button name="action_activate" string="Activate" type="object" 
                            class="btn-primary" invisible="status != 'draft'"/>
                    <button name="action_archive" string="Archive" type="object" 
                            class="btn-secondary" invisible="status != 'active'"/>
                    <button name="action_enroll_eligible_students" string="Enroll Eligible Students" 
                            type="object" class="btn-info" invisible="status != 'active'"/>
                    <button name="action_enroll_with_wizard" string="Advanced Enrollment" 
                            type="object" class="btn-success" invisible="status != 'active'"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,active,archived"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Enter integration name..."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Course Information">
                            <field name="elearning_course_id" required="1"/>
                            <field name="training_program_id"/>
                        </group>
                        <group string="Integration Settings">
                            <field name="auto_enroll_eligible"/>
                            <field name="completion_threshold"/>
                        </group>
                    </group>
                    <group string="Certificate Success Criteria">
                        <group string="Minimum Requirements">
                            <field name="min_sessions_required"/>
                            <field name="min_homework_required"/>
                        </group>
                        <group string="Progress Requirements">
                            <field name="min_elearning_progress"/>
                        </group>
                    </group>
                    <group>
                        <group string="Statistics">
                            <field name="enrolled_students" readonly="1"/>
                            <field name="completed_students" readonly="1"/>
                            <field name="completion_rate" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Progress Trackers" name="progress_trackers">
                            <field name="progress_trackers" readonly="1">
                                <list>
                                    <field name="student_id"/>
                                    <field name="status"/>
                                    <field name="elearning_progress"/>
                                    <field name="overall_progress"/>
                                    <field name="enrollment_date"/>
                                    <field name="completion_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Course Integration List View -->
    <record id="view_gr_course_integration_list" model="ir.ui.view">
        <field name="name">gr.course.integration.list</field>
        <field name="model">gr.course.integration</field>
        <field name="arch" type="xml">
            <list string="Course Integrations">
                <field name="name"/>
                <field name="elearning_course_id"/>
                <field name="training_program_id"/>
                <field name="status"/>
                <field name="enrolled_students"/>
                <field name="completed_students"/>
                <field name="completion_rate"/>
            </list>
        </field>
    </record>

    <!-- Course Integration Kanban View -->
    <record id="view_gr_course_integration_kanban" model="ir.ui.view">
        <field name="name">gr.course.integration.kanban</field>
        <field name="model">gr.course.integration</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="elearning_course_id"/>
                <field name="status"/>
                <field name="enrolled_students"/>
                <field name="completion_rate"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="elearning_course_id"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="status" widget="label_selection"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_stats">
                                        <div class="o_kanban_stat">
                                            <span class="o_kanban_stat_value">
                                                <field name="enrolled_students"/>
                                            </span>
                                            <span class="o_kanban_stat_label">Enrolled</span>
                                        </div>
                                        <div class="o_kanban_stat">
                                            <span class="o_kanban_stat_value">
                                                <field name="completion_rate"/>
                                            </span>
                                            <span class="o_kanban_stat_label">% Complete</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Course Integration Search View -->
    <record id="view_gr_course_integration_search" model="ir.ui.view">
        <field name="name">gr.course.integration.search</field>
        <field name="model">gr.course.integration</field>
        <field name="arch" type="xml">
            <search string="Course Integrations">
                <field name="name"/>
                <field name="elearning_course_id"/>
                <field name="training_program_id"/>
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                <filter string="Archived" name="archived" domain="[('status', '=', 'archived')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Training Program" name="group_program" context="{'group_by': 'training_program_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Course Integration Action -->
    <record id="action_gr_course_integration" model="ir.actions.act_window">
        <field name="name">Course Integrations</field>
        <field name="res_model">gr.course.integration</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first course integration!
            </p>
            <p>
                Course integrations bridge eLearning courses with your training programs,
                enabling seamless student enrollment and progress tracking.
            </p>
        </field>
    </record>

</odoo>
