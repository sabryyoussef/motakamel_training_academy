<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Certificate Automation Wizard Form View -->
        <record id="view_gr_certificate_automation_wizard_form" model="ir.ui.view">
            <field name="name">gr.certificate.automation.wizard.form</field>
            <field name="model">gr.certificate.automation.wizard</field>
            <field name="arch" type="xml">
                <form string="Certificate Automation">
                    <header>
                        <button name="action_generate_eligibility_report" string="Eligibility Report" type="object" class="btn-outline-info" help="Generate certificate eligibility report for dashboard"/>
                        <button name="action_preview_certificates" string="Preview Certificates" type="object" class="btn-outline-info"/>
                        <button name="action_execute_automation" string="Execute Automation" type="object" class="btn-primary"/>
                        <button name="action_reset_wizard" string="Reset" type="object" class="btn-secondary"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <div class="oe_stat_button" icon="fa-file-text-o">
                                <field name="available_certificates_count" widget="statinfo" string="Available"/>
                            </div>
                            <div class="oe_stat_button" icon="fa-check-circle" invisible="not success_count">
                                <field name="success_count" widget="statinfo" string="Success"/>
                            </div>
                            <div class="oe_stat_button" icon="fa-exclamation-triangle" invisible="not error_count">
                                <field name="error_count" widget="statinfo" string="Errors"/>
                            </div>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="operation_type" widget="selection" readonly="1"/>
                            </h1>
                        </div>
                        
                        <notebook>
                            <!-- Operation Configuration -->
                            <page string="Operation Configuration" name="operation_config">
                                <group string="Operation Settings">
                                    <group>
                                        <field name="operation_type" required="1"/>
                                        <field name="generate_pdf" invisible="operation_type not in ['auto_generate', 'bulk_generate_pdf']"/>
                                        <field name="send_email" invisible="operation_type != 'bulk_send_email'"/>
                                    </group>
                                    <group>
                                        <field name="update_state" invisible="operation_type != 'bulk_send_email'"/>
                                    </group>
                                </group>
                                
                                <!-- Email Configuration -->
                                <group string="Email Configuration" invisible="operation_type != 'bulk_send_email'">
                                    <group>
                                        <field name="email_template_id"/>
                                    </group>
                                    <group>
                                        <field name="email_subject"/>
                                    </group>
                                </group>
                                <group string="Email Body" invisible="operation_type != 'bulk_send_email'">
                                    <field name="email_body" widget="html"/>
                                </group>
                            </page>
                            
                            <!-- Selection Criteria -->
                            <page string="Selection Criteria" name="selection_criteria">
                                <group string="Filter Criteria">
                                    <group>
                                        <field name="certificate_type"/>
                                        <field name="state_filter"/>
                                    </group>
                                    <group>
                                        <field name="date_from"/>
                                        <field name="date_to"/>
                                    </group>
                                </group>
                            </page>
                            
                            <!-- Results -->
                            <page string="Results" name="results" invisible="not operation_date">
                                <group string="Operation Results">
                                    <group>
                                        <field name="processed_count" readonly="1"/>
                                        <field name="success_count" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="error_count" readonly="1"/>
                                        <field name="operation_date" readonly="1"/>
                                    </group>
                                </group>
                                
                                <group string="Error Details" invisible="not error_details">
                                    <field name="error_details" widget="text" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Certificate Automation Wizard Action -->
        <record id="action_gr_certificate_automation_wizard" model="ir.actions.act_window">
            <field name="name">Certificate Automation</field>
            <field name="res_model">gr.certificate.automation.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context">{}</field>
        </record>

    </data>
</odoo>
