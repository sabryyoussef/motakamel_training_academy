<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Session Template Form View -->
        <record id="session_template_form_view" model="ir.ui.view">
            <field name="name">gr.session.template.form</field>
            <field name="model">gr.session.template</field>
            <field name="arch" type="xml">
                <form string="Session Template">
                    <header>
                        <button name="action_preview_template" string="Preview Template" type="object" class="btn-info"/>
                        <field name="is_active" widget="boolean_button" options='{"terminology": "active"}'/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_use_template" type="object" class="oe_stat_button" icon="fa-calendar">
                                <field name="usage_count" widget="statinfo" string="Usage Count"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Template Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="description"/>
                                <field name="is_active"/>
                            </group>
                            <group>
                                <field name="target_english_level"/>
                                <field name="target_course_integration"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Session Configuration">
                                <group>
                                    <group string="Basic Settings">
                                        <field name="default_topic"/>
                                        <field name="default_objectives" widget="text"/>
                                        <field name="default_duration"/>
                                        <field name="default_type"/>
                                    </group>
                                    <group string="Location Settings">
                                        <field name="default_location"/>
                                        <field name="default_meeting_link"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Scheduling Settings">
                                <group>
                                    <group string="Auto Scheduling">
                                        <field name="auto_schedule"/>
                                        <field name="default_schedule_days"/>
                                        <field name="preferred_time_slots" widget="text"/>
                                    </group>
                                    <group string="Usage Statistics">
                                        <field name="sessions_created" readonly="1"/>
                                        <field name="last_used" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Session Template List View -->
        <record id="session_template_list_view" model="ir.ui.view">
            <field name="name">gr.session.template.list</field>
            <field name="model">gr.session.template</field>
            <field name="arch" type="xml">
                <list string="Session Templates" decoration-success="is_active == True" decoration-muted="is_active == False">
                    <field name="name"/>
                    <field name="default_topic"/>
                    <field name="default_duration"/>
                    <field name="default_type"/>
                    <field name="target_english_level"/>
                    <field name="usage_count"/>
                    <field name="sessions_created"/>
                    <field name="is_active"/>
                    <field name="last_used"/>
                </list>
            </field>
        </record>

        <!-- Session Template Search View -->
        <record id="session_template_search_view" model="ir.ui.view">
            <field name="name">gr.session.template.search</field>
            <field name="model">gr.session.template</field>
            <field name="arch" type="xml">
                <search string="Session Templates">
                    <field name="name"/>
                    <field name="default_topic"/>
                    <field name="target_course_integration"/>
                    <field name="target_english_level"/>
                    <separator/>
                    <filter string="Active Templates" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive Templates" name="inactive" domain="[('is_active', '=', False)]"/>
                    <separator/>
                    <filter string="Online Sessions" name="online" domain="[('default_type', '=', 'online')]"/>
                    <filter string="In-Person Sessions" name="in_person" domain="[('default_type', '=', 'in_person')]"/>
                    <filter string="Hybrid Sessions" name="hybrid" domain="[('default_type', '=', 'hybrid')]"/>
                    <separator/>
                    <filter string="Beginner Level" name="beginner" domain="[('target_english_level', '=', 'beginner')]"/>
                    <filter string="Intermediate Level" name="intermediate" domain="[('target_english_level', '=', 'intermediate')]"/>
                    <filter string="Advanced Level" name="advanced" domain="[('target_english_level', '=', 'advanced')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Session Type" name="group_type" domain="[]" context="{'group_by': 'default_type'}"/>
                        <filter string="English Level" name="group_level" domain="[]" context="{'group_by': 'target_english_level'}"/>
                        <filter string="Course Integration" name="group_course" domain="[]" context="{'group_by': 'target_course_integration'}"/>
                        <filter string="Active Status" name="group_active" domain="[]" context="{'group_by': 'is_active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Session Template Kanban View -->
        <record id="session_template_kanban_view" model="ir.ui.view">
            <field name="name">gr.session.template.kanban</field>
            <field name="model">gr.session.template</field>
            <field name="arch" type="xml">
                <kanban string="Session Templates" class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="default_topic"/>
                    <field name="default_duration"/>
                    <field name="default_type"/>
                    <field name="is_active"/>
                    <field name="usage_count"/>
                    <field name="sessions_created"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="default_topic"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="row">
                                            <div class="col-6">
                                                <span class="text-muted">Duration:</span>
                                                <field name="default_duration"/> hours
                                            </div>
                                            <div class="col-6">
                                                <span class="text-muted">Type:</span>
                                                <field name="default_type"/>
                                            </div>
                                        </div>
                                        <div class="row mt-2">
                                            <div class="col-6">
                                                <span class="text-muted">Used:</span>
                                                <field name="usage_count"/> times
                                            </div>
                                            <div class="col-6">
                                                <span class="text-muted">Sessions:</span>
                                                <field name="sessions_created"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span t-if="record.is_active.raw_value" class="badge badge-success">Active</span>
                                            <span t-else="" class="badge badge-secondary">Inactive</span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <button name="action_preview_template" type="object" class="btn btn-sm btn-info">
                                                <i class="fa fa-eye"/> Preview
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Session Template Actions -->
        <record id="action_session_template" model="ir.actions.act_window">
            <field name="name">Session Templates</field>
            <field name="res_model">gr.session.template</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first session template!
                </p>
                <p>
                    Session templates help you standardize and automate the creation of course sessions.
                    Define default topics, objectives, duration, and other settings that will be applied
                    when creating sessions from intake batches.
                </p>
            </field>
        </record>

    </data>
</odoo>
