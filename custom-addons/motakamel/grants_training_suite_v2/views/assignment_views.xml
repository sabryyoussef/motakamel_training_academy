<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Assignment Form View -->
        <record id="view_gr_assignment_form" model="ir.ui.view">
            <field name="name">gr.assignment.form</field>
            <field name="model">gr.assignment</field>
            <field name="arch" type="xml">
                <form string="Assignment">
                    <header>
                        <button name="action_assign" string="Assign" type="object" class="btn-primary" 
                                invisible="state != 'draft'"/>
                        <button name="action_mark_contacted" string="Mark Contacted" type="object" class="btn-primary" 
                                invisible="state != 'assigned'"/>
                        <button name="action_enroll" string="Enroll" type="object" class="btn-primary" 
                                invisible="state != 'contacted'"/>
                        <button name="action_start_course" string="Start Course" type="object" class="btn-primary" 
                                invisible="state != 'enrolled'"/>
                        <button name="action_complete" string="Complete" type="object" class="btn-primary" 
                                invisible="state != 'in_progress'"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" 
                                invisible="state in ['completed', 'cancelled']"/>
                        <button name="action_reset" string="Reset" type="object" class="btn-secondary" 
                                invisible="state in ['draft', 'cancelled']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,assigned,contacted,enrolled,in_progress,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <div class="oe_stat_button" icon="fa-clock-o">
                                <field name="response_time" widget="statinfo" string="Response Time (hrs)"/>
                            </div>
                            <div class="oe_stat_button" icon="fa-calendar">
                                <field name="enrollment_time" widget="statinfo" string="Enrollment Time (days)"/>
                            </div>
                            <div class="oe_stat_button" icon="fa-exclamation-triangle" 
                                 invisible="is_overdue == False">
                                <field name="is_overdue" widget="statinfo" string="Overdue"/>
                            </div>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Assignment Details">
                                <field name="student_id" required="1" domain="[('state', 'in', ['eligible', 'assigned_to_agent'])]"/>
                                <field name="agent_id" required="1"/>
                                <field name="assignment_date" readonly="1"/>
                                <field name="assigned_by_id" readonly="1"/>
                                <field name="state"/>
                            </group>
                            <group string="Contact Information">
                                <field name="first_contact_date" readonly="1"/>
                                <field name="last_contact_date" readonly="1"/>
                                <field name="contact_attempts" readonly="1"/>
                                <field name="response_time" readonly="1"/>
                                <field name="is_overdue" readonly="1"/>
                                <field name="days_since_assignment" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Performance Metrics">
                                <field name="enrollment_time" readonly="1"/>
                                <field name="completion_time" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="assignment_notes" placeholder="Assignment notes and instructions..."/>
                        </group>
                        
                        <group>
                            <field name="contact_notes" placeholder="Contact notes and communication details..."/>
                        </group>
                        
                        <notebook>
                            <page string="Timeline" invisible="state == 'draft'">
                                <group>
                                    <group>
                                        <field name="assignment_date" readonly="1"/>
                                        <field name="first_contact_date" readonly="1"/>
                                        <field name="last_contact_date" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="contact_attempts" readonly="1"/>
                                        <field name="response_time" readonly="1"/>
                                        <field name="enrollment_time" readonly="1"/>
                                        <field name="completion_time" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Notes">
                                <group>
                                    <field name="assignment_notes" readonly="1"/>
                                </group>
                                <group>
                                    <field name="contact_notes" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Assignment List View -->
        <record id="view_gr_assignment_list" model="ir.ui.view">
            <field name="name">gr.assignment.list</field>
            <field name="model">gr.assignment</field>
            <field name="arch" type="xml">
                <list string="Assignments" default_order="assignment_date desc">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="agent_id"/>
                    <field name="assignment_date"/>
                    <field name="first_contact_date"/>
                    <field name="contact_attempts"/>
                    <field name="response_time"/>
                    <field name="is_overdue"/>
                    <field name="state" widget="badge" decoration-success="state == 'completed'" 
                           decoration-warning="state == 'in_progress'" decoration-info="state == 'contacted'" 
                           decoration-danger="state == 'cancelled'"/>
                </list>
            </field>
        </record>

        <!-- Assignment Kanban View -->
        <record id="view_gr_assignment_kanban" model="ir.ui.view">
            <field name="name">gr.assignment.kanban</field>
            <field name="model">gr.assignment</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="student_id"/>
                    <field name="agent_id"/>
                    <field name="assignment_date"/>
                    <field name="first_contact_date"/>
                    <field name="contact_attempts"/>
                    <field name="response_time"/>
                    <field name="is_overdue"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="student_id"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_record_details">
                                            <div class="o_kanban_record_bottom">
                                                <div class="oe_kanban_bottom_left">
                                                    <span>Agent: <field name="agent_id"/></span>
                                                </div>
                                                <div class="oe_kanban_bottom_right">
                                                    <span>Response: <field name="response_time"/>hrs</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Assignment Search View -->
        <record id="view_gr_assignment_search" model="ir.ui.view">
            <field name="name">gr.assignment.search</field>
            <field name="model">gr.assignment</field>
            <field name="arch" type="xml">
                <search string="Search Assignments">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="agent_id"/>
                    <field name="assigned_by_id"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Assigned" name="assigned" domain="[('state', '=', 'assigned')]"/>
                    <filter string="Contacted" name="contacted" domain="[('state', '=', 'contacted')]"/>
                    <filter string="Enrolled" name="enrolled" domain="[('state', '=', 'enrolled')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                    <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Overdue" name="overdue" domain="[('is_overdue', '=', True)]"/>
                    <filter string="No Contact" name="no_contact" domain="[('first_contact_date', '=', False)]"/>
                    <separator/>
                    <filter string="This Week" name="this_week" domain="[('assignment_date', '>=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                    <filter string="This Month" name="this_month" domain="[('assignment_date', '>=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Agent" name="group_agent" context="{'group_by': 'agent_id'}"/>
                        <filter string="Assigned By" name="group_assigned_by" context="{'group_by': 'assigned_by_id'}"/>
                        <filter string="Assignment Date" name="group_assignment_date" context="{'group_by': 'assignment_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Assignment Action -->
        <record id="action_gr_assignment" model="ir.actions.act_window">
            <field name="name">Assignments</field>
            <field name="res_model">gr.assignment</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('student_id.state', 'in', ['eligible', 'assigned_to_agent'])]</field>
            <field name="context">{'search_default_this_week': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first assignment!
                </p>
                <p>
                    Assignments track the relationship between students and agents,
                    including contact attempts, response times, and enrollment progress.
                </p>
            </field>
        </record>

    </data>
</odoo>
