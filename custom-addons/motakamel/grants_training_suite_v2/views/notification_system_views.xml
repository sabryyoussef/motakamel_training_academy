<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Progress Notification Form View -->
        <record id="view_progress_notification_form" model="ir.ui.view">
            <field name="name">gr.progress.notification.form</field>
            <field name="model">gr.progress.notification</field>
            <field name="arch" type="xml">
                <form string="Progress Notification">
                    <header>
                        <button name="action_send_notification" string="Send Notification" type="object" class="btn-primary" invisible="status != 'draft'"/>
                        <button name="action_mark_as_read" string="Mark as Read" type="object" class="btn-secondary" invisible="status != 'sent'"/>
                        <button name="action_archive_notification" string="Archive" type="object" class="btn-secondary" invisible="status == 'archived'"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,sent,read,archived"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Notification Title"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="student_id"/>
                                <field name="progress_tracker_id"/>
                                <field name="notification_type"/>
                                <field name="milestone_type" invisible="notification_type != 'milestone'"/>
                            </group>
                            <group>
                                <field name="priority"/>
                                <field name="auto_generated" readonly="1"/>
                                <field name="progress_value" readonly="1"/>
                                <field name="sent_date" readonly="1"/>
                                <field name="read_date" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="message" nolabel="1"/>
                        </group>
                        
                        <group>
                            <group>
                                <field name="recipient_user_id"/>
                                <field name="recipient_email"/>
                                <field name="recipient_phone"/>
                            </group>
                            <group>
                                <field name="email_sent" readonly="1"/>
                                <field name="sms_sent" readonly="1"/>
                                <field name="in_app_notification" readonly="1"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="trigger_condition" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Progress Notification Tree View -->
        <record id="view_progress_notification_tree" model="ir.ui.view">
            <field name="name">gr.progress.notification.tree</field>
            <field name="model">gr.progress.notification</field>
            <field name="arch" type="xml">
                <list string="Progress Notifications" decoration-success="status == 'read'" decoration-info="status == 'sent'" decoration-muted="status == 'archived'">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="notification_type"/>
                    <field name="milestone_type" invisible="notification_type != 'milestone'"/>
                    <field name="priority"/>
                    <field name="status"/>
                    <field name="sent_date"/>
                    <field name="read_date"/>
                    <field name="auto_generated"/>
                </list>
            </field>
        </record>
        
        <!-- Progress Notification Search View -->
        <record id="view_progress_notification_search" model="ir.ui.view">
            <field name="name">gr.progress.notification.search</field>
            <field name="model">gr.progress.notification</field>
            <field name="arch" type="xml">
                <search string="Search Notifications">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="notification_type"/>
                    <field name="milestone_type"/>
                    <field name="message"/>
                    
                    <filter string="Unread" name="unread" domain="[('status', 'in', ['draft', 'sent'])]"/>
                    <filter string="Read" name="read" domain="[('status', '=', 'read')]"/>
                    <filter string="Archived" name="archived" domain="[('status', '=', 'archived')]"/>
                    
                    <filter string="Milestone" name="milestone" domain="[('notification_type', '=', 'milestone')]"/>
                    <filter string="Completion" name="completion" domain="[('notification_type', '=', 'completion')]"/>
                    <filter string="Stalled" name="stalled" domain="[('notification_type', '=', 'stalled')]"/>
                    <filter string="Alert" name="alert" domain="[('notification_type', '=', 'alert')]"/>
                    
                    <filter string="High Priority" name="high_priority" domain="[('priority', 'in', ['high', 'urgent'])]"/>
                    <filter string="Auto Generated" name="auto_generated" domain="[('auto_generated', '=', True)]"/>
                    <filter string="Manual" name="manual" domain="[('auto_generated', '=', False)]"/>
                    
                    <filter string="Today" name="today" domain="[('create_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d'))]"/>
                    <filter string="This Week" name="this_week" domain="[('create_date', '&gt;=', (datetime.datetime.now() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    <filter string="This Month" name="this_month" domain="[('create_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-01'))]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                        <filter string="Notification Type" name="group_type" context="{'group_by': 'notification_type'}"/>
                        <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                        <filter string="Student" name="group_student" context="{'group_by': 'student_id'}"/>
                        <filter string="Created Date" name="group_date" context="{'group_by': 'create_date:day'}"/>
                        <filter string="Auto Generated" name="group_auto" context="{'group_by': 'auto_generated'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Progress Notification Action -->
        <record id="action_progress_notification" model="ir.actions.act_window">
            <field name="name">Progress Notifications</field>
            <field name="res_model">gr.progress.notification</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_unread': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No notifications yet!
                </p>
                <p>
                    Progress notifications will automatically appear here when students reach milestones,
                    complete courses, or need attention due to stalled progress.
                </p>
            </field>
        </record>
        
        <!-- Notification Dashboard (Kanban View) -->
        <record id="view_progress_notification_kanban" model="ir.ui.view">
            <field name="name">gr.progress.notification.kanban</field>
            <field name="model">gr.progress.notification</field>
            <field name="arch" type="xml">
                <kanban string="Progress Notifications" class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="notification_type"/>
                    <field name="milestone_type"/>
                    <field name="priority"/>
                    <field name="status"/>
                    <field name="sent_date"/>
                    <field name="read_date"/>
                    <field name="message"/>
                    <field name="auto_generated"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click" t-att-class="{
                                'oe_kanban_card_success': record.status.raw_value == 'read',
                                'oe_kanban_card_info': record.status.raw_value == 'sent',
                                'oe_kanban_card_muted': record.status.raw_value == 'archived'
                            }">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <div class="o_kanban_record_subtitle">
                                                <field name="student_id"/>
                                            </div>
                                        </div>
                                        <div class="o_kanban_record_top_right">
                                            <span t-if="record.auto_generated.raw_value" class="badge badge-secondary">
                                                Auto
                                            </span>
                                            <span t-if="record.priority.raw_value == 'high'" class="badge badge-danger">
                                                High
                                            </span>
                                            <span t-if="record.priority.raw_value == 'urgent'" class="badge badge-danger">
                                                Urgent
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <span class="badge badge-primary">
                                                    <field name="notification_type"/>
                                                </span>
                                                <span t-if="record.milestone_type.raw_value" class="badge badge-info">
                                                    <field name="milestone_type"/>
                                                </span>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <field name="status" widget="label_selection"/>
                                            </div>
                                        </div>
                                        
                                        <div class="o_kanban_record_bottom">
                                            <small class="text-muted">
                                                <field name="sent_date"/>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Notification Dashboard Action -->
        <record id="action_progress_notification_kanban" model="ir.actions.act_window">
            <field name="name">Notification Dashboard</field>
            <field name="res_model">gr.progress.notification</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'search_default_unread': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Notification Dashboard
                </p>
                <p>
                    Monitor all progress notifications in a visual dashboard format.
                    Track milestone achievements, completion alerts, and stalled progress notifications.
                </p>
            </field>
        </record>
        
    </data>
</odoo>
