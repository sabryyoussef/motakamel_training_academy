<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Financial Management Workflow -->
        <record id="workflow_financial" model="motakamel.workflow">
            <field name="name">Financial Management</field>
            <field name="description">Complete financial process from setup to reporting</field>
            <field name="sequence">30</field>
            <field name="color">#27ae60</field>
            <field name="icon">motakamel_workflow_dashboard,static/description/financial-management.png</field>
        </record>

        <!-- Financial Management Stages -->
        <record id="stage_financial_setup" model="motakamel.workflow.stage">
            <field name="name">Setup</field>
            <field name="workflow_id" ref="workflow_financial"/>
            <field name="sequence">10</field>
            <field name="description">Fee structure and payment terms definition</field>
            <field name="color">#e74c3c</field>
            <field name="module_xml_ids">openeducat_fees.menu_op_fees_root</field>
        </record>

        <record id="stage_financial_collection" model="motakamel.workflow.stage">
            <field name="name">Collection</field>
            <field name="workflow_id" ref="workflow_financial"/>
            <field name="sequence">20</field>
            <field name="description">Fee collection and payment processing</field>
            <field name="color">#f39c12</field>
            <field name="module_xml_ids">openeducat_fees.menu_op_fees_root</field>
        </record>

        <record id="stage_financial_processing" model="motakamel.workflow.stage">
            <field name="name">Processing</field>
            <field name="workflow_id" ref="workflow_financial"/>
            <field name="sequence">30</field>
            <field name="description">Payment reconciliation and accounting</field>
            <field name="color">#2ecc71</field>
            <field name="module_xml_ids">account.menu_finance</field>
        </record>

        <record id="stage_financial_reporting" model="motakamel.workflow.stage">
            <field name="name">Reporting</field>
            <field name="workflow_id" ref="workflow_financial"/>
            <field name="sequence">40</field>
            <field name="description">Financial reports and analytics</field>
            <field name="color">#9b59b6</field>
            <field name="module_xml_ids">openeducat_fees.menu_op_fees_root</field>
        </record>

        <!-- Financial Management Transitions -->
        <record id="transition_setup_to_collection" model="motakamel.workflow.transition">
            <field name="name">Start Collection</field>
            <field name="workflow_id" ref="workflow_financial"/>
            <field name="from_stage_id" ref="stage_financial_setup"/>
            <field name="to_stage_id" ref="stage_financial_collection"/>
            <field name="button_label">Begin Fee Collection</field>
            <field name="sequence">10</field>
        </record>

        <record id="transition_collection_to_processing" model="motakamel.workflow.transition">
            <field name="name">Process Payments</field>
            <field name="workflow_id" ref="workflow_financial"/>
            <field name="from_stage_id" ref="stage_financial_collection"/>
            <field name="to_stage_id" ref="stage_financial_processing"/>
            <field name="button_label">Reconcile Payments</field>
            <field name="sequence">20</field>
        </record>

        <record id="transition_processing_to_reporting" model="motakamel.workflow.transition">
            <field name="name">Generate Reports</field>
            <field name="workflow_id" ref="workflow_financial"/>
            <field name="from_stage_id" ref="stage_financial_processing"/>
            <field name="to_stage_id" ref="stage_financial_reporting"/>
            <field name="button_label">Create Reports</field>
            <field name="sequence">30</field>
        </record>

    </data>
</odoo>
