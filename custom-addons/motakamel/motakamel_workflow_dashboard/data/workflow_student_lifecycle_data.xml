<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Student Lifecycle Workflow -->
        <record id="workflow_student_lifecycle" model="motakamel.workflow">
            <field name="name">Student Lifecycle</field>
            <field name="description">Complete student journey from inquiry to graduation</field>
            <field name="sequence">10</field>
            <field name="color">#3498db</field>
            <field name="icon">motakamel_workflow_dashboard,static/description/student-lifecycle.png</field>
        </record>

        <!-- Student Lifecycle Stages -->
        <record id="stage_inquiry" model="motakamel.workflow.stage">
            <field name="name">Inquiry</field>
            <field name="workflow_id" ref="workflow_student_lifecycle"/>
            <field name="sequence">10</field>
            <field name="description">Initial student interest and information gathering</field>
            <field name="color">#e74c3c</field>
            <field name="module_xml_ids">openeducat_core.menu_op_school_root</field>
        </record>

        <record id="stage_admission" model="motakamel.workflow.stage">
            <field name="name">Admission</field>
            <field name="workflow_id" ref="workflow_student_lifecycle"/>
            <field name="sequence">20</field>
            <field name="description">Application processing and approval</field>
            <field name="color">#f39c12</field>
            <field name="module_xml_ids">openeducat_admission.menu_op_admission_root</field>
        </record>

        <record id="stage_registration" model="motakamel.workflow.stage">
            <field name="name">Registration</field>
            <field name="workflow_id" ref="workflow_student_lifecycle"/>
            <field name="sequence">30</field>
            <field name="description">Course selection and enrollment</field>
            <field name="color">#2ecc71</field>
            <field name="module_xml_ids">openeducat_core.menu_op_school_root</field>
        </record>

        <record id="stage_enrollment" model="motakamel.workflow.stage">
            <field name="name">Enrollment</field>
            <field name="workflow_id" ref="workflow_student_lifecycle"/>
            <field name="sequence">40</field>
            <field name="description">Official student status activation</field>
            <field name="color">#9b59b6</field>
            <field name="module_xml_ids">openeducat_core.menu_op_school_root</field>
        </record>

        <record id="stage_academic_progress" model="motakamel.workflow.stage">
            <field name="name">Academic Progress</field>
            <field name="workflow_id" ref="workflow_student_lifecycle"/>
            <field name="sequence">50</field>
            <field name="description">Ongoing academic activities and progress tracking</field>
            <field name="color">#1abc9c</field>
            <field name="module_xml_ids">openeducat_attendance.menu_op_attendance_root,openeducat_assignment.menu_op_assignment_root</field>
        </record>

        <record id="stage_graduation" model="motakamel.workflow.stage">
            <field name="name">Graduation</field>
            <field name="workflow_id" ref="workflow_student_lifecycle"/>
            <field name="sequence">60</field>
            <field name="description">Completion and certification</field>
            <field name="color">#34495e</field>
            <field name="module_xml_ids">openeducat_core.menu_op_school_root</field>
        </record>

        <!-- Student Lifecycle Transitions -->
        <record id="transition_inquiry_to_admission" model="motakamel.workflow.transition">
            <field name="name">Submit Application</field>
            <field name="workflow_id" ref="workflow_student_lifecycle"/>
            <field name="from_stage_id" ref="stage_inquiry"/>
            <field name="to_stage_id" ref="stage_admission"/>
            <field name="button_label">Start Application</field>
            <field name="sequence">10</field>
        </record>

        <record id="transition_admission_to_registration" model="motakamel.workflow.transition">
            <field name="name">Approve Admission</field>
            <field name="workflow_id" ref="workflow_student_lifecycle"/>
            <field name="from_stage_id" ref="stage_admission"/>
            <field name="to_stage_id" ref="stage_registration"/>
            <field name="button_label">Approve & Register</field>
            <field name="sequence">20</field>
        </record>

        <record id="transition_registration_to_enrollment" model="motakamel.workflow.transition">
            <field name="name">Complete Registration</field>
            <field name="workflow_id" ref="workflow_student_lifecycle"/>
            <field name="from_stage_id" ref="stage_registration"/>
            <field name="to_stage_id" ref="stage_enrollment"/>
            <field name="button_label">Enroll Student</field>
            <field name="sequence">30</field>
        </record>

        <record id="transition_enrollment_to_progress" model="motakamel.workflow.transition">
            <field name="name">Begin Academic Activities</field>
            <field name="workflow_id" ref="workflow_student_lifecycle"/>
            <field name="from_stage_id" ref="stage_enrollment"/>
            <field name="to_stage_id" ref="stage_academic_progress"/>
            <field name="button_label">Start Academic Year</field>
            <field name="sequence">40</field>
        </record>

        <record id="transition_progress_to_graduation" model="motakamel.workflow.transition">
            <field name="name">Complete Program</field>
            <field name="workflow_id" ref="workflow_student_lifecycle"/>
            <field name="from_stage_id" ref="stage_academic_progress"/>
            <field name="to_stage_id" ref="stage_graduation"/>
            <field name="button_label">Graduate Student</field>
            <field name="sequence">50</field>
        </record>

    </data>
</odoo>
