<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Resource Administration Workflow -->
        <record id="workflow_administration" model="motakamel.workflow">
            <field name="name">Resource Administration</field>
            <field name="description">Complete resource management process</field>
            <field name="sequence">40</field>
            <field name="color">#8e44ad</field>
            <field name="icon">motakamel_workflow_dashboard,static/description/resource-administration.png</field>
        </record>

        <!-- Resource Administration Stages -->
        <record id="stage_resource_planning" model="motakamel.workflow.stage">
            <field name="name">Planning</field>
            <field name="workflow_id" ref="workflow_administration"/>
            <field name="sequence">10</field>
            <field name="description">Resource requirements and capacity planning</field>
            <field name="color">#e74c3c</field>
            <field name="module_xml_ids">openeducat_facility.menu_op_facility_root</field>
        </record>

        <record id="stage_resource_allocation" model="motakamel.workflow.stage">
            <field name="name">Allocation</field>
            <field name="workflow_id" ref="workflow_administration"/>
            <field name="sequence">20</field>
            <field name="description">Resource assignment and scheduling</field>
            <field name="color">#f39c12</field>
            <field name="module_xml_ids">openeducat_classroom.menu_op_classroom_root</field>
        </record>

        <record id="stage_resource_management" model="motakamel.workflow.stage">
            <field name="name">Management</field>
            <field name="workflow_id" ref="workflow_administration"/>
            <field name="sequence">30</field>
            <field name="description">Ongoing resource oversight</field>
            <field name="color">#2ecc71</field>
            <field name="module_xml_ids">openeducat_core.menu_op_faculty_main</field>
        </record>

        <record id="stage_resource_maintenance" model="motakamel.workflow.stage">
            <field name="name">Maintenance</field>
            <field name="workflow_id" ref="workflow_administration"/>
            <field name="sequence">40</field>
            <field name="description">Resource upkeep and optimization</field>
            <field name="color">#9b59b6</field>
            <field name="module_xml_ids">openeducat_facility.menu_op_facility_root</field>
        </record>

        <!-- Resource Administration Transitions -->
        <record id="transition_planning_to_allocation" model="motakamel.workflow.transition">
            <field name="name">Allocate Resources</field>
            <field name="workflow_id" ref="workflow_administration"/>
            <field name="from_stage_id" ref="stage_resource_planning"/>
            <field name="to_stage_id" ref="stage_resource_allocation"/>
            <field name="button_label">Assign Resources</field>
            <field name="sequence">10</field>
        </record>

        <record id="transition_allocation_to_management" model="motakamel.workflow.transition">
            <field name="name">Start Management</field>
            <field name="workflow_id" ref="workflow_administration"/>
            <field name="from_stage_id" ref="stage_resource_allocation"/>
            <field name="to_stage_id" ref="stage_resource_management"/>
            <field name="button_label">Begin Oversight</field>
            <field name="sequence">20</field>
        </record>

        <record id="transition_management_to_maintenance" model="motakamel.workflow.transition">
            <field name="name">Schedule Maintenance</field>
            <field name="workflow_id" ref="workflow_administration"/>
            <field name="from_stage_id" ref="stage_resource_management"/>
            <field name="to_stage_id" ref="stage_resource_maintenance"/>
            <field name="button_label">Plan Maintenance</field>
            <field name="sequence">30</field>
        </record>

    </data>
</odoo>
