<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Module Mapping Data -->
        <!-- This file contains mappings between workflows and OpenEducat modules -->
        
        <!-- Student Lifecycle Module Mappings -->
        <record id="mapping_student_lifecycle_core" model="motakamel.workflow.stage">
            <field name="name">Core Module</field>
            <field name="workflow_id" ref="workflow_student_lifecycle"/>
            <field name="sequence">100</field>
            <field name="description">Core student management functionality</field>
            <field name="module_xml_ids">openeducat_core.menu_op_school_root</field>
        </record>

        <!-- Academic Operations Module Mappings -->
        <record id="mapping_academic_timetable" model="motakamel.workflow.stage">
