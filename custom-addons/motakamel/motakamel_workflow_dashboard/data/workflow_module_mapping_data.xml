            <field name="name">Parent Portal</field>
            <field name="workflow_id" ref="workflow_parent"/>
            <field name="sequence">100</field>
            <field name="description">Parent portal functionality</field>
            <field name="module_xml_ids">openeducat_parent.menu_op_parent_root</field>
        </record>

    </data>
</odoo>
